extends layout.pug

block css
    link(rel="stylesheet" type="text/css"  href="/static/css/imgPreview.css")


block content
    form(action=`/memory/${memory._id}/update`, method="POST" enctype="multipart/form-data")
        img(src=`/${memory.thumbnail}`)#preview.imgThumbnail
        #js-fileName
